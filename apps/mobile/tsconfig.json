{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "paths": {
      "@molody/core": ["../core/src/index.ts"],
      "@molody/core/*": ["../core/src/*"],
      "@/*": [
        "./*"
      ],
      "@env": ["./declarations.d.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
